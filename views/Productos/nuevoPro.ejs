<%- include("../templates/index")%> <%- include("../templates/menu")%>
<div class="container mt-5">
  <form action="/productos/productos/nuevoproducto" method="post">
    <div class="card">
      <div class="card-header">
        <h3>Nuevo Producto</h3>
      </div>
      <div class="card-body">
        <input
          class="form-control mb-3"
          type="text"
          name="nombre"
          id="nombre"
          placeholder="Nombre"
          autofocus
          autocomplete="name"
        />
        <input
          class="form-control mb-3"
          type="text"
          name="descripcion"
          id="descripcion"
          placeholder="Descripcion"
        />
        <input
          class="form-control mb-3"
          type="number"
          name="precio"
          id="precio"
          placeholder="Precio"
        />
        <input
          class="form-control mb-3"
          type="number"
          name="cantidad"
          id="cantidad"
          placeholder="Cantidad"
          min="1"
          max="5000"
        />
      </div>
      <div class="card-footer">
        <button class="form control btn btn-success" type="submit">
          <i class="bi bi-check-circle"></i> Guardar
        </button>
        <a href="/productos/productos" class="btn btn-secondary"><i class="bi bi-arrow-bar-left"></i> Cancelar</a>
      </div>
    </div>
  </form>
</div>
<%- include("../templates/pie")%>
