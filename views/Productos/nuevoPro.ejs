<%- include("../templates/index")%> <%- include("../templates/menuProduct")%>
<div class="container mt-5">
  <form action="/productos/productos/nuevoproducto" method="post">
    <div class="card">
      <div class="card-header">
        <h3>Nuevo Producto</h3>
      </div>
      <div class="card-body">
        <input
          class="form-control mb-3"
          type="text"
          name="nombre"
          id="nombre"
          placeholder="Nombre"
          autofocus
          autocomplete="name"
        />
        <input
          class="form-control mb-3"
          type="text"
          name="descripcion"
          id="descripcion"
          placeholder="Descripcion"
        />
        <div class="input-group mb-3">
          <span class="input-group-text">$</span>
          <input type="text" class="form-control" aria-label="Precio" name="precio" id="precio" placeholder="1">
          <span class="input-group-text">.00</span>
        </div>
        <div class="input-group mb-3">
          <span class="input-group-text">#</span>
          <input type="text" class="form-control" aria-label="Cantidad" name="cantidad" id="cantidad">
        </div>
      <div class="card-footer">
        <button class="form control btn btn-success" type="submit">
          <i class="bi bi-check-circle"></i> Guardar
        </button>
        <a href="/productos/productos" class="btn btn-secondary"><i class="bi bi-arrow-bar-left"></i> Cancelar</a>
      </div>
    </div>
  </form>
</div>
<%- include("../templates/pie")%>
