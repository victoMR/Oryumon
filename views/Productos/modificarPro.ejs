<%- include("../templates/index")%> <%- include("../templates/menuProduct")%>
<div class="container mt-5">
  <form action="/productos/productos/editar" method="post">
    <div class="card">
      <div class="card-header">
        <h3>Editar productio  : <%= producto.id %></h3>
      </div>
      <div class="card-body">
        <input
          class="form-control mb-3"
          type="hidden"
          name="id"
          id="id" 
          value="<%= producto.id %>"
        />
        <p>Nombre</p>
        <input
          class="form-control mb-3"
          type="text"
          name="nombre"
          id="nombre"
          autofocus
          value="<%= producto.nombre %>"
        />
        <p>Descripcion</p>
        <input
          class="form-control mb-3"
          type="text"
          name="descripcion"
          id="descripcion"
          value="<%= producto.descripcion %>"
        />
        <p>Precio</p>
        <input
          class="form-control mb-3"
          type="number"
          name="precio"
          id="precio"
          min="1"
          max="99999"
          value="<%= producto.precio %>"
        />
        <p>Cantidad</p>
        <input
          class="form-control mb-3"
          type="number"
          name="cantidad"
          id="cantidad"
          min="1"
          max="999"
          value="<%= producto.cantidad %>"
        />
      </div>
      <div class="card-footer">
        <button class="form control btn btn-success" type="submit">
          <i class="bi bi-check-circle"></i> Modificar producto
        </button>
        <a href="/productos/productos" class="btn btn-secondary"><i class="bi bi-arrow-bar-left"></i> Cancelar</a>
      </div>
    </div>
  </form>
</div>
